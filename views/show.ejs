<%- include('./partials/head.ejs') %>

<div class="showListing">    
    <h1><%= showMerchant.name %></h1>
    <h3><%= showMerchant.website %></h3>
    <img src="<%= showMerchant.image %>" />
    <br />
    Accepts on-chain: <%= showMerchant.onChain %>
    <br />
    Discount offered for LN payments: <%= showMerchant.discount %>
    <br />

    Description: <%= showMerchant.description %>
    <br />
    Address: <%= showMerchant.address.street %>
    <br />
    Business Type: <%= showMerchant.type %>
    <br />
    <div class="anchor">
        <a href="/merchants">Back to search</a>
    </div>
    <br />

    <div class="edit">
        <a href="/merchants/all/<%= showMerchant._id %>/edit">
          <img src="/images/edit.png" />
        </a>
        <a href="/merchants/all/<%= showMerchant._id %>/delete">
          <img src="/images/bin.png" />
        </a>
      </div>



</showListing>

