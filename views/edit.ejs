<%- include('./partials/head.ejs') %>

<form method="post" action="/bookmarks/<%= bookmark._id %>?_method=PUT">

    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= bookmark.title %>"/>
    <br />

    <label for="url">URL</label>
    <input type="text" name="url" id="url" value="<%= bookmark.url %>"/> 
    <br />

    <label for="description">Description</label>
    <textarea name="description" id="description"><%= bookmark.description %></textarea>
    <br />

    <input type="submit" value="Save Bookmark"/>
</form>

